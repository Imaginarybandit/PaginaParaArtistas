<% layout('./layouts/boilerplate') %>
<!-- Make a form for uploading images -->
<!-- Make sure to set the method to POST and the enctype to multipart/form-data -->
<form action="/upload" method="post" enctype="multipart/form-data">
  <!-- Create a div for inserting an image -->
  <div class="form-group">
    <label for="image">Image</label>
    <input
      type="file"
      class="form-control-file d-block"
      id="image"
      name="image"
      placeholder="Upload an image"
      multiple
    />
  </div>
  <button type="submit" class="btn btn-primary mx-auto">Upload Image</button>
</form>
