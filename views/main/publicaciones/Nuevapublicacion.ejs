<% layout('./layouts/boilerplate') %>
<div class="container my-5">
  <div class="row">
    <div class="col-lg-8">
      <!-- Main Content -->
      <h1 class="mb-4">Create New Publication</h1>
      <form action="/<%=groupId%>/publicacion/new" method="POST">
        <div class="form-group">
          <label for="postTitle">Title</label>
          <input
            type="text"
            class="form-control"
            id="postTitle"
            name="title"
            placeholder="Enter post title"
          />
        </div>
        <div class="form-group">
          <label for="postContent">Post description</label>
          <textarea
            class="form-control"
            id="postContent"
            name="content"
            rows="10"
            placeholder="Write your post content"
          ></textarea>
        </div>

        <div class="form-group">
          <label for="postDate">Date</label>
          <input
            type="date"
            class="form-control"
            id="postDate"
            name="date"
            placeholder="Enter post date"
          />
        </div>

        <div class="form-group">
          <label for="postImage">Image</label>
          <input
            type="text"
            class="form-control"
            id="postImage"
            name="image"
            placeholder="Enter post image"
          />
        </div>

        <div class="form-group">
          <label for="postLocalizacion">Localizacion</label>
          <input
            type="text"
            class="form-control"
            id="postLocalizacion"
            name="localizacion"
            placeholder="Enter post group"
          />
        </div>

        <button type="submit" class="btn btn-primary">Create Post</button>
      </form>
    </div>
  </div>
</div>
